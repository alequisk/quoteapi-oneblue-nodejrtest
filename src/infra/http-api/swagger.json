{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "Api to manage quotes",
    "contact": {
      "name": "√Ålex Sousa Cruz",
      "url": "https://www.linkedin.com/in/alequisk/",
      "email": "alexsousa1435@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API server"
    }
  ],
  "paths": {
    "/ping": {
      "get": {
        "summary": "Ping",
        "description": "Check if the server is up",
        "responses": {
          "200": {
            "description": "Server is Up!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "API is running!"
                }
              }
            }
          }
        }
      }
    },
    "/quotes": {
      "get": {
        "summary": "Get all quotes",
        "description": "Get all quotes ordered by date with pagination",
        "responses": {
          "200": {
            "description": "Quotes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuoteWithLikes"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a quote",
        "description": "Create a quote",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Quote"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Quote created"
          }
        }
      }
    },
    "/author": {
      "post": {
        "summary": "Create an author",
        "description": "Create an author",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAuthor"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Author created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Author"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "Email already exists"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateAuthor": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "nameAsQuote": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Author": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "nameAsQuote": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "QuoteWithLikes": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "quote": {
            "type": "string"
          },
          "likes": {
            "type": "number"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "Quote": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id of the quote"
          },
          "author": {
            "type": "string",
            "description": "Author of the quote"
          },
          "quote": {
            "type": "string",
            "description": "Quote"
          },
          "createdAt": {
            "type": "string",
            "description": "Date of creation of the quote"
          }
        }
      }
    }
  }
}